
@model IEnumerable<Category>  
@{
    ViewData["Title"] = "Index";
}

<button type="submit"><a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Create">Add Category</a></button>

<table class="table table-bordered table-striped" styel="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Edit
            </th>
            <th>
               Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.displayOrder
                </td>
                 <td >
                  <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"> Edit </a>

                </td>
                <td >
                  <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"> Delete </a>

                </td>
            </tr>
            }
    </tbody>
</table>

